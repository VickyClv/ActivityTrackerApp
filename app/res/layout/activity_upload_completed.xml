<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UploadCompletedActivity">


    <ImageView
        android:id="@+id/imageCompleted"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/image_upload_completed_desc"
        android:src="@drawable/upload_completed_image"
        tools:srcCompat="@drawable/upload_completed_image" />

    <TextView
        android:id="@+id/text_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/uploaded_text"
        android:textSize="24sp"
        android:layout_gravity="center_vertical|center_horizontal" />


    <Button
        android:id="@+id/btn_new_upload"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="70dp"
        android:text="@string/new_upload_button"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/btn_route_statistics"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="45dp"
        android:text="@string/route_statistics_button"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:text="@string/home_button"
        android:textSize="25sp"
        />


</androidx.appcompat.widget.LinearLayoutCompat>
